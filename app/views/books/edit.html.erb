<h2>Editing Book</h2>
<p><%= @book.title %></p>
<p><%= @book.body %></p>
<h1>編集画面</h1>
 	<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit '保存' %>
<% end %>
<p class="botton"><%=link_to "show", book_path(@book) %></p>
<p class="botton"><%=link_to "back", books_path %></p>
